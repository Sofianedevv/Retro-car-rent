<aside class="fixed inset-y-0 left-0 w-64 bg-gray-800">
    <div class="p-4 border-b border-gray-700">
        <h1 class="text-white text-2xl font-semibold">Administration</h1>
    </div>
    
    <nav class="mt-4">
        <ul>
            <li>
                <a href="{{ path('admin_dashboard') }}" 
                   class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                   {{ app.request.get('_route') == 'admin_dashboard' ? 'bg-gray-700 text-white' : '' }}">
                    <i class="fas fa-tachometer-alt w-6"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_vehicles') }}" 
                   class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                   {{ app.request.get('_route') starts with 'admin_vehicle' ? 'bg-gray-700 text-white' : '' }}">
                    <i class="fas fa-car w-6"></i>
                    <span>Véhicules</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_users') }}" 
                   class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                   {{ app.request.get('_route') == 'admin_users' ? 'bg-gray-700 text-white' : '' }}">
                    <i class="fas fa-users w-6"></i>
                    <span>Utilisateurs</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_reservations') }}" 
                   class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                   {{ app.request.get('_route') starts with 'admin_reservation' ? 'bg-gray-700 text-white' : '' }}">
                    <i class="fas fa-calendar-alt w-6"></i>
                    <span>Réservations</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_motorcycle_types') }}" 
                   class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors
                   {{ app.request.get('_route') starts with 'admin_motorcycle_type' ? 'bg-gray-700 text-white' : '' }}">
                    <i class="fas fa-motorcycle w-6"></i>
                    <span>Types de motos</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app') }}" target="_blank"
                   class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors">
                    <i class="fas fa-external-link-alt w-6"></i>
                    <span>Voir le site</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="absolute bottom-0 w-full p-4 border-t border-gray-700">
        <div class="text-gray-400 text-sm mb-2">{{ app.user.email }}</div>
        <a href="{{ path('app_logout') }}" class="flex items-center text-red-400 hover:text-red-300">
            <i class="fas fa-sign-out-alt w-6"></i>
            <span>Déconnexion</span>
        </a>
    </div>
</aside>

<div class="fixed top-4 right-4 z-50">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-lg shadow-lg {{ label == 'success' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div> 