{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-[#F5F5F0] py-12">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-2xl border-2 border-[#8B4513]">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-playfair font-bold text-[#8B4513]">Connexion</h1>
            <div class="mt-2 h-1 w-16 bg-[#8B4513] mx-auto"></div>
            <p class="text-gray-600 mt-4">Accédez à votre compte pour gérer vos réservations</p>
        </div>

        {% if error %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                {% if error is iterable %}
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                {% else %}
                    {{ error }}
                {% endif %}
            </div>
        {% endif %}

        {% for message in app.flashes('info') %}
            <div class="mb-4 p-4 bg-blue-50 border-l-4 border-blue-500 text-blue-700 font-playfair">
                {{ message }}
            </div>
        {% endfor %}

        <form method="post" class="space-y-6">
            <div>
                <label for="inputEmail" class="block text-sm font-medium text-[#8B4513]">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" 
                       class="mt-1 block w-full px-4 py-3 bg-[#F5F5F0] border-2 border-[#8B4513]/20 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#8B4513] focus:border-[#8B4513] transition-colors duration-300" 
                       autocomplete="email" required autofocus>
            </div>

            <div>
                <label for="inputPassword" class="block text-sm font-medium text-[#8B4513]">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" 
                       class="mt-1 block w-full px-4 py-3 bg-[#F5F5F0] border-2 border-[#8B4513]/20 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#8B4513] focus:border-[#8B4513] transition-colors duration-300" 
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex items-center">
                <input type="checkbox" name="_remember_me" id="remember_me" 
                       class="h-4 w-4 text-[#8B4513] focus:ring-[#8B4513] border-[#8B4513]/20 rounded transition-colors duration-300">
                <label for="remember_me" class="ml-2 block text-sm text-[#8B4513]">
                    Se souvenir de moi
                </label>
            </div>

            <div>
                <button type="submit" 
                        class="w-full flex justify-center py-3 px-4 border-2 border-[#8B4513] rounded-md shadow-md text-[#F5F5F0] bg-[#8B4513] hover:bg-[#734010] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#8B4513] transition-all duration-300 font-playfair text-lg">
                    Se connecter
                </button>
            </div>
        </form>

        <div class="mt-6 text-center">
            <p class="text-sm text-[#8B4513]">
                Pas encore de compte ? 
                <a href="{{ path('app_register') }}" class="font-medium text-[#8B4513] hover:text-[#734010] underline transition-colors duration-300">
                    S'inscrire
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
