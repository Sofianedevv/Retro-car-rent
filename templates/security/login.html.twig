{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100 py-12">
        <div class="max-w-md w-full bg-gray-900 p-8 rounded-lg shadow-2xl shadow-current">
            <div class="text-center mb-8">
                <h1 class="text-4xl font-playfair font-bold text-[#b3a97d]">Connexion</h1>
                <div class="mt-2 h-1 w-16 bg-primary mx-auto"></div>
                <p class="text-gray-100 mt-4">Accédez à votre compte pour gérer vos réservations</p>
            </div>

            {% if error %}
                <div class="mb-4 p-4 bg-gray-100 border-l-4 border-primary text-gray-900 font-playfair">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% for message in app.flashes('info') %}
                <div class="mb-4 p-4 bg-gray-100 border-l-4 border-primary text-gray-900 font-playfair">
                    {{ message }}
                </div>
            {% endfor %}

            <form method="post" class="space-y-6">
                <div>
                    <label for="inputEmail" class="block text-lg font-medium text-primary">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="mt-1 block w-full px-4 py-3 bg-gray-100 border-2 border-primary/20 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-colors duration-300 transform hover:border-primary hover:shadow-lg"
                           autocomplete="email" required autofocus>
                </div>

                <div>
                    <label for="inputPassword" class="block text-lg font-medium text-primary">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword"
                           class="mt-1 block w-full px-4 py-3 bg-gray-100 border-2 border-primary/20 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-colors duration-300"
                           autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="flex items-center">
                    <input type="checkbox" name="_remember_me" id="remember_me"
                           class="h-4 w-4 text-primary focus:ring-primary border-primary/20 rounded transition-colors duration-300">
                    <label for="remember_me" class="ml-2 block text-lg text-primary">Se souvenir de moi</label>
                </div>

                <div>
                    <button type="submit"
                            class="w-full flex justify-center border-primary shadow-md text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary bg-[#b3a97d] hover:bg-transparent  hover:text-primary border border-transparent hover:border-primary font-semibold rounded-lg px-8 py-3 transition-all duration-300 font-playfair text-lg">
                        Se connecter
                    </button>
                </div>
            </form>

            <div class="mt-6 text-center">
                <p class="text-sm text-primary">
                    Pas encore de compte ?
                    <a href="{{ path('app_register') }}" class="font-medium text-primary hover:text-[#b3a97d] underline transition-colors duration-300">
                        S'inscrire
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
