<div class="group relative bg-gray-50 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-500">
    <div class="relative overflow-hidden h-64">
        <img src="{{motorcycle.defaultImage}}"
             alt="{{motorcycle.model}}"
             class="w-full h-full object-cover transform group-hover:scale-110 transition-all duration-700">
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <div class="absolute top-4 left-4 bg-gray-100 text-gray-900 px-3 py-1 rounded-full shadow-lg font-bold text-sm">
            {{ motorcycle.year }}
        </div>
        {% if motorcycle.averageRating is defined %}
            <div class="absolute top-4 right-4 flex items-center bg-gray-50 text-gray-900 px-3 py-1 rounded-full shadow-lg font-bold text-sm">
                <i class="fas fa-star text-yellow-500 mr-1"></i>
                {{ motorcycle.averageRating|number_format(1) }}
            </div>
        {% endif %}
    </div>

    <div class="p-6 space-y-4">
        <div class="flex justify-between items-center">
            <h3 class="font-playfair text-xl font-bold text-gray-900">{{ motorcycle.brand }}</h3>
            <p class="text-gray-600 text-sm">{{ motorcycle.model }}</p>
        </div>

        <hr class="border-t border-gray-300">

        <div class="flex flex-col space-y-4">
            <div class="flex items-center justify-between text-sm py-3 px-4 bg-primary/10 rounded-lg">
                <div class="flex items-center gap-2 text-gray-600">
                    <i class="fas fa-tachometer-alt text-gray-500"></i>
                    <span>{{ motorcycle.engineCapacity }} cm³</span>
                </div>

                <div class="text-right">
                    <span class="text-gray-900 font-bold text-xl">{{ motorcycle.price }}€</span>
                    <span class="text-gray-500">/jour</span>
                </div>
            </div>

            <hr class="border-t border-gray-300">

            <div class="grid grid-cols-3 gap-3 py-4">
                <div class="flex flex-col items-center text-gray-600">
                    <i class="fas fa-gas-pump text-lg text-gray-900"></i>
                    <span class="text-sm">{{ motorcycle.fuelType|capitalize }}</span>
                </div>
                <div class="flex flex-col items-center text-gray-600">
                    <i class="fas fa-motorcycle text-lg text-gray-900"></i>
                    <span class="text-sm">{{ motorcycle.type|capitalize }}</span>
                </div>
                <div class="flex flex-col items-center text-gray-600">
                    <i class="fas fa-road text-lg text-gray-900"></i>
                    <span class="text-sm">{{ motorcycle.mileage }} Km</span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-2 gap-3 mt-4">
            <a href="{{ path('app_vehicle_show_details', {'vehicleId': motorcycle.id}) }}"
               class="flex items-center justify-center bg-gray-50 text-gray-900 border-2 border-gray-900 hover:bg-gray-900 hover:text-white rounded-lg font-bold px-4 py-2 transition-all duration-300 gap-2">
                <i class="fas fa-info-circle"></i>
                Détails
            </a>

            <a href="{{ path('app_add_reservation', {'vehicleId': motorcycle.id}) }}"
               class="flex items-center justify-center bg-gray-900 text-white hover:border-2 hover:border-gray-900 hover:text-gray-900 hover:bg-white rounded-lg font-bold px-4 py-2 transition-all duration-300 gap-2">
                <i class="fas fa-calendar-alt"></i>
                Réserver
            </a>
        </div>
    </div>
</div>
