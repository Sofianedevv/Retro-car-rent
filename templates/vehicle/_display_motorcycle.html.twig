{% extends 'base.html.twig' %}
{% block title %}Nos Motos{% endblock %}
{% block body %}
<section id="shop" class="bg-[#F5F5F0]">
    <div class="mx-auto">
        <div class="bg-primary py-16 relative">
            <!-- Bouton retour discret mais visible -->
            <div class="absolute top4 left-4">
                <a href="{{ path('app_collections') }}"
                   class="bg-[#8B4513] text-white hover:bg-white hover:text-black border-black rounded-full px-6 py-3 text-sm transition-all duration-300 flex items-center shadow-md hover:shadow-lg">
                    <i class="fas fa-arrow-left mr-2"></i>
                </a>
            </div>

            <!-- Titre et description -->
            <div class="mb-12 text-center">
                <h1 class="text-4xl font-playfair font-bold text-[#8B4513]">Nos Motos de Collection</h1>
                <p class="text-gray-600 mt-4 max-w-2xl mx-auto">Découvrez notre sélection de motos d'exception, mêlant puissance et élégance pour des sensations uniques.</p>
            </div>

            <!-- Barre de recherche -->
            <div class="max-w-3xl mx-auto">
                <form method="get" action="{{ path('app_motorcycle') }}" class="flex items-center gap-4">
                    <div class="flex-1 relative">
                        <input type="text"
                               name="search"
                               value="{{ search|default('') }}"
                               placeholder="Rechercher une moto par marque ou modèle..."
                               class="w-full px-6 py-3 border-2 border-[#8B4513] bg-white focus:outline-none focus:ring-2 focus:ring-[#8B4513]/50 placeholder-gray-400 rounded-lg">
                        {% if search %}
                            <a href="{{ path('app_motorcycle') }}"
                               class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700">
                                <i class="fas fa-times"></i>
                            </a>
                        {% endif %}
                    </div>
                    <button type="submit"
                            class="bg-[#8B4513] text-[#F5F5F0] px-8 py-3 hover:bg-[#734010] transition-colors duration-300 flex items-center font-playfair rounded-lg">
                        <i class="fas fa-search mr-2"></i>
                        Rechercher
                    </button>
                </form>
            </div>
        </div>

 <div class="container">
     {% if search %}
         <div class="mb-8 mt-6 text-center bg-white py-6 px-4 rounded-lg shadow-md">
             <p class="text-gray-600 flex items-center justify-center">
                 {% if motorcycles|length > 0 %}
                     <span class="font-semibold text-[#8B4513]">{{ motorcycles|length }}</span> &nbsp; résultat(s) trouvé(s) pour "<span class="font-semibold text-[#8B4513]">{{ search }}</span>"
                 {% else %}
                     <!-- Icône de résultat vide -->
                     <i class="fas fa-times-circle text-[#8B4513] mr-2"></i>
                     Aucun résultat trouvé pour "<span class="font-semibold text-[#8B4513]">{{ search }}</span>"
                 {% endif %}
             </p>
         </div>
     {% endif %}

     <!-- Bouton pour afficher/masquer les filtres en version mobile -->
     <div class="block md:hidden text-center py-4">
         <button id="toggle-filters"
                 class="bg-[#8B4513] text-white py-2 px-4 rounded-full focus:outline-none">
             Voir les filtres
         </button>
         <script>
             document.addEventListener("DOMContentLoaded", () => {
                 const toggleButton = document.getElementById("toggle-filters");
                 const filters = document.getElementById("filters");

                 if (toggleButton && filters) {
                     toggleButton.addEventListener("click", () => {
                         filters.classList.toggle("hidden");
                     });
                 }
             });
         </script>
     </div>
        <!-- Filter Toggle Button for Mobile -->
        <div class="flex flex-col md:flex-row my-8">
            <!-- Filters -->
            <div id="filters" class="w-full md:w-1/4 p-6 hidden md:block bg-white shadow-lg rounded-lg">
                <form method="get" action="{{ path('app_motorcycle') }}" class="space-y-6">
                    <!-- Marque Filter -->
                    <div class="mb-8 pb-6 border-b border-[#8B4513]/10">
                        <h3 class="text-xl font-playfair font-bold text-[#8B4513] mb-4">Marque</h3>
                        <select name="brand" class="w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                            <option value="">Sélectionner une marque</option>
                            {% for brand in brands %}
                                <option value="{{ brand }}" {% if filters.brand == brand %}selected{% endif %}>{{ brand }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <!-- Prix Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Prix</h3>
                        <div class="flex flex-col space-y-2">
                            <input type="number" name="minPrice" placeholder="Prix min"
                                   value="{{ filters.minPrice }}"
                                   class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513] placeholder-gray-400">
                            <input type="number" name="maxPrice" placeholder="Prix max"
                                   value="{{ filters.maxPrice }}"
                                   class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513] placeholder-gray-400">
                        </div>
                    </div>

                    <!-- Cylindrée Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Cylindrée</h3>
                        <div class="flex flex-col space-y-2">
                            <input type="number" name="minEngineCapacity" placeholder="Cylindrée min"
                                   value="{{ filters.minEngineCapacity }}"
                                   class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                            <input type="number" name="maxEngineCapacity" placeholder="Cylindrée max"
                                   value="{{ filters.maxEngineCapacity }}"
                                   class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                        </div>
                    </div>

                    <!-- Type de moto Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Type</h3>
                        <select name="type" class="w-full border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                            <option value="">Sélectionner un type</option>
                            {% for type in types %}
                                <option value="{{ type }}" {% if filters.type == type %}selected{% endif %}>{{ type }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <!-- Année Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Année</h3>
                        <div class="flex flex-col space-y-2">
                            <select name="minYear" class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                                <option value="">Année min</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {% if filters.minYear is not empty and filters.minYear == year %}selected{% endif %}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                            <select name="maxYear" class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                                <option value="">Année max</option>
                                {% for year in years %}
                                    <option value="{{ year }}" {% if filters.maxYear is not empty and filters.maxYear == year %}selected{% endif %}>
                                        {{ year }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <!-- Kilométrage Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Kilométrage</h3>
                        <div class="flex flex-col space-y-2">
                            <input type="number" name="minMileage" placeholder="Kilométrage min"
                                   value="{{ filters.minMileage }}"
                                   class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                            <input type="number" name="maxMileage" placeholder="Kilométrage max"
                                   value="{{ filters.maxMileage }}"
                                   class="border rounded p-2 focus:outline-none focus:ring-2 focus:ring-[#8B4513]">
                        </div>
                    </div>

                    <!-- Disponibilité Filter -->
                    <div class="mb-6 pb-8 border-b border-gray-line">
                        <h3 class="text-lg font-semibold mb-6">Disponibilité</h3>
                        <label class="flex items-center">
                            <input type="checkbox" name="availability" value="1"
                                   {% if filters.availability %}checked{% endif %}
                                   class="form-checkbox text-[#8B4513] focus:ring-[#8B4513]">
                            <span class="ml-2">Disponible uniquement</span>
                        </label>
                    </div>

                    <div class="flex space-x-4">
                        <a href="{{ path('app_motorcycle') }}"
                           class="w-1/2 bg-[#F5F5F0] text-[#8B4513] py-3 px-6 border-2 border-[#8B4513] hover:bg-[#8B4513] hover:text-[#F5F5F0] transition-colors duration-300 text-center font-playfair rounded-lg">
                            Réinitialiser
                        </a>
                        <button type="submit"
                                class="w-1/2 bg-[#8B4513] text-[#F5F5F0] py-3 px-6 hover:bg-[#734010] transition-colors duration-300 font-playfair rounded-lg">
                            Appliquer
                        </button>
                    </div>
                </form>
            </div>

            <!-- Products List -->
            <div class="w-full md:w-3/4 p-6">
                <!-- Products grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- All Car -->
                {% for motorcylce in motorcycles %}
                    {% include 'parts/card/favorite/_motorcycle_card.html.twig' %}
                {% endfor %}
                </div>
                <!-- Pagination -->
                {{ knp_pagination_render(motorcycles) }}

            </div>
        </div>
    </div>

</div>
    <!-- Scroll to top button -->
    <button id="scrollToTopBtn" class="fixed bottom-6 right-6 bg-primary text-white rounded-full p-4 shadow-lg border-2 border-gray-900 hover:bg-primary/10 transition-all duration-300 ease-in-out" style="display: none;">
        <i class="fas fa-arrow-up text-xl text-gray-900"></i>
    </button>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const scrollToTopBtn = document.getElementById('scrollToTopBtn');
            const footer = document.querySelector('footer'); // Sélectionne le footer
            const footerHeight = footer ? footer.offsetHeight : 0; // Récupère la hauteur du footer

            // Masque le bouton au début
            scrollToTopBtn.style.display = "none";

            // Affiche le bouton lorsque l'utilisateur défile de plus de 150px
            window.onscroll = function() {
                if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                    scrollToTopBtn.style.display = "block";
                } else {
                    scrollToTopBtn.style.display = "none";
                }
            };

            // Ajuste la position du bouton lors du redimensionnement de la fenêtre
            window.addEventListener('resize', function() {
                const footerHeight = footer ? footer.offsetHeight : 0;
                scrollToTopBtn.style.bottom = `${footerHeight + 20}px`; // Ajoute 20px d'espace entre le bouton et le footer
            });

            // Fonction pour faire défiler la page jusqu'en haut lorsqu'on clique sur le bouton
            scrollToTopBtn.onclick = function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            };
        });
    </script>
</section>
{% endblock %}
