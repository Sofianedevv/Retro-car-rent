{% block content %}
	<style>
		.detail-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 1rem;
			background: #f0f0f0; /* Change to a darker color for better contrast */
			@media (min-width: 640px) {
				padding: 2rem;
			}
		}
		
		.breadcrumb {
			font-size: 0.9rem;
			color: #666;
			margin-bottom: 2rem;
		}
		
		.breadcrumb a {
			color: #8B4513;
			transition: color 0.3s ease;
		}
		
		.breadcrumb a:hover {
			color: #5d2d0d;
		}
		
		.vehicle-title {
			font-size: 2.5rem;
			color: #2d3748;
			margin-bottom: 1rem;
			font-weight: 700;
		}
		
		.price-rating-container {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 2rem;
			padding: 1rem;
			background: #f8f9fa;
			border-radius: 8px;
		}
		
		.price {
			font-size: 2rem;
			color: #8B4513;
			font-weight: 700;
		}
		
		.price-period {
			font-size: 1rem;
			color: #666;
		}
		
		.content-column {
			grid-column: 1 / -1; 
		}
		
		.main-content {
			display: grid;
			grid-template-columns: 1fr;
			gap: 2rem;
			margin-bottom: 2rem;
			@media (min-width: 1024px) {
				grid-template-columns: 2fr 1fr;
			}
		}
		
		.details-card {
			background: white;
			padding: 2rem;
			border-radius: 12px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
			position: sticky;
			top: 2rem;
		}
		
		.specs-grid {
			display: grid;
			grid-template-columns: 1fr;
			gap: 1.5rem;
			margin-top: 1.5rem;
			@media (min-width: 640px) {
				grid-template-columns: repeat(2, 1fr);
			}
		}
		
		.spec-item {
			display: flex;
			align-items: center;
			gap: 1rem;
			padding: 1rem;
			background: #f8f9fa;
			border-radius: 8px;
		}
		
		.spec-icon {
			width: 40px;
			height: 40px;
			display: flex;
			align-items: center;
			justify-content: center;
			background: #8B4513;
			color: white;
			border-radius: 50%;
		}
		
		.reviews-section {
			margin-top: 3rem;
			background: white;
			padding: 2rem;
			border-radius: 12px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
		}
		
		.review-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			margin-bottom: 2rem;
			padding-bottom: 1rem;
			border-bottom: 2px solid #f3f4f6;
		}
		
		.review-card {
			background: #f8f9fa;
			border-radius: 12px;
			padding: 1.5rem;
			margin-bottom: 1.5rem;
			transition: transform 0.2s ease;
		}
		
		.review-card:hover {
			transform: translateY(-2px);
		}
		
		.review-reply {
			margin-left: 3rem;
			position: relative;
		}
		
		.review-reply::before {
			content: '';
			position: absolute;
			left: -1.5rem;
			top: 0;
			bottom: 0;
			width: 2px;
			background: #e5e7eb;
		}
		
		.booking-form {
			position: sticky;
			top: 2rem;
		}
		
		.gallery-container {
			display: flex;
			flex-direction: column;
			gap: 1.5rem;
			background: white;
			padding: 1.5rem;
			border-radius: 12px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
			margin-bottom: 2rem;
			max-width: 1400px;
			margin-left: auto;
			margin-right: auto;
			@media (min-width: 768px) {
				flex-direction: row;
			}
		}
		
		.main-image-container {
			flex: 1;
			position: relative;
			overflow: hidden;
			border-radius: 8px;
			height: 300px;
			@media (min-width: 768px) {
				height: 400px;
			}
			@media (min-width: 1024px) {
				height: 500px;
			}
		}
		
		.main-image {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: transform 0.3s ease;
		}
		
		.main-image:hover {
			transform: scale(1.03);
		}
		
		.thumbnails-container {
			display: flex;
			flex-direction: row;
			overflow-x: auto;
			gap: 0.75rem;
			width: 100%;
			@media (min-width: 768px) {
				flex-direction: column;
				width: 200px;
				overflow-x: visible;
			}
		}
		
		.thumbnail {
			width: 100px;
			height: 150px;
			object-fit: cover;
			border-radius: 6px;
			cursor: pointer;
			transition: all 0.3s ease;
			border: 3px solid transparent;
			opacity: 0.7;
			@media (min-width: 768px) {
				width: 200px;
			}
		}
		
		.thumbnail:hover {
			opacity: 1;
			transform: translateX(-5px);
		}
		
		.thumbnail.active {
			border-color: #8B4513;
			opacity: 1;
		}
		
		.main-image-container::after {
			content: 'üîç';
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			font-size: 2rem;
			opacity: 0;
			transition: opacity 0.3s ease;
			pointer-events: none;
		}
		
		.main-image-container:hover::after {
