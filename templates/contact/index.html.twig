{% extends 'base.html.twig' %}

{% block title %}Contact - Retro Car Rent{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#F5F5F0]">
    {# En-tête avec image de fond #}
    <div class="relative h-[300px] bg-cover bg-center" style="background-image: url('{{ asset('template-html/assets/images/contact-banner.jpg') }}')">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        <div class="relative h-full flex items-center justify-center">
            <div class="text-center text-white">
                <h1 class="text-4xl md:text-5xl font-playfair font-bold mb-4">Contact</h1>
                <nav class="text-sm md:text-base">
                    <ol class="flex justify-center space-x-2">
                        <li><a href="{{ path('app') }}" class="hover:text-[#8B4513]">Accueil</a></li>
                        <li><span class="mx-2">></span></li>
                        <li class="text-[#8B4513]">Contact</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    {# Section principale #}
    <div class="container mx-auto px-4 py-12">
        {# Cards d'information #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            {# Téléphone #}
            <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-transform duration-300">
                <div class="w-16 h-16 bg-[#8B4513] rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-phone text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Appelez-nous</h3>
                <p class="text-gray-600">+33 (0)1 23 45 67 89</p>
            </div>

            {# Email #}
            <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-transform duration-300">
                <div class="w-16 h-16 bg-[#8B4513] rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-envelope text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Écrivez-nous</h3>
                <p class="text-gray-600">contact@retro-car-rent.com</p>
            </div>

            {# Localisation #}
            <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-transform duration-300">
                <div class="w-16 h-16 bg-[#8B4513] rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-map-marker-alt text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">Rendez-nous visite</h3>
                <p class="text-gray-600">123 Avenue des Voitures Classiques, Paris</p>
            </div>
        </div>

        {# Formulaire et Carte #}
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="grid md:grid-cols-2">
                {# Formulaire #}
                <div class="p-8">
                    <h2 class="text-3xl font-playfair font-bold text-[#8B4513] mb-8">Envoyez-nous un message</h2>
                    
                    {% if sent %}
                        <div class="mb-6 p-4 rounded-lg bg-green-100 text-green-700 flex items-center">
                            <i class="fas fa-check-circle text-xl mr-3"></i>
                            <span>Message envoyé avec succès !</span>
                        </div>
                    {% endif %}

                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        <div class="space-y-4">
                            <div class="form-group">
                                {{ form_widget(form.name, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-[#8B4513] focus:ring-0 transition-colors',
                                        'placeholder': 'Votre nom'
                                    }
                                }) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.email, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-[#8B4513] focus:ring-0 transition-colors',
                                        'placeholder': 'Votre email'
                                    }
                                }) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.subject, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-[#8B4513] focus:ring-0 transition-colors',
                                        'placeholder': 'Sujet'
                                    }
                                }) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.message, {
                                    'attr': {
                                        'class': 'w-full px-4 py-3 rounded-lg border-2 border-gray-200 focus:border-[#8B4513] focus:ring-0 transition-colors',
                                        'rows': '6',
                                        'placeholder': 'Votre message'
                                    }
                                }) }}
                            </div>

                            <button type="submit" class="w-full bg-[#8B4513] text-white py-3 rounded-lg hover:bg-[#734010] transform hover:-translate-y-1 transition-all duration-300 flex items-center justify-center space-x-2">
                                <i class="fas fa-paper-plane"></i>
                                <span>Envoyer</span>
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>

                {# Carte Google Maps #}
                <div class="relative h-full min-h-[500px]">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.9916256937586!2d2.292292615674431!3d48.85837007928757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66e2964e34e2d%3A0x8ddca9ee380ef7e0!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1647874587201!5m2!1sfr!2sfr"
                        class="absolute inset-0 w-full h-full"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>

        {# Horaires d'ouverture #}
        <div class="mt-12 bg-white rounded-xl shadow-lg p-8">
            <h3 class="text-2xl font-playfair font-bold text-center text-[#8B4513] mb-6">Horaires d'ouverture</h3>
            <div class="max-w-2xl mx-auto grid grid-cols-2 gap-4">
                <div class="text-center p-4 rounded-lg bg-gray-50">
                    <h4 class="font-semibold mb-2">Lundi - Vendredi</h4>
                    <p class="text-gray-600">9h00 - 18h00</p>
                </div>
                <div class="text-center p-4 rounded-lg bg-gray-50">
                    <h4 class="font-semibold mb-2">Samedi</h4>
                    <p class="text-gray-600">10h00 - 17h00</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 